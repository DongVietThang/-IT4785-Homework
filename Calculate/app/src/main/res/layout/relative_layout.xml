<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/txt_res"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ce"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:text="CE"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_c"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_ce"
            android:gravity="center"
            android:text="C"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_bs"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_c"
            android:gravity="center"
            android:text="BS"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_div"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_bs"
            android:gravity="center"
            android:text="/"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/line1"
        android:layout_marginBottom="-3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_7"
            android:gravity="center"
            android:text="8"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_8"
            android:gravity="center"
            android:text="9"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_9"
            android:gravity="center"
            android:text="x"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/line2"
        android:layout_marginBottom="-3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_4"
            android:gravity="center"
            android:text="5"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_5"
            android:gravity="center"
            android:text="6"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_6"
            android:gravity="center"
            android:text="-"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/line3"
        android:layout_marginBottom="-3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_1"
            android:gravity="center"
            android:text="2"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_2"
            android:gravity="center"
            android:text="3"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_3"
            android:gravity="center"
            android:text="+"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/line4"
        android:layout_marginBottom="-3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="+/-"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_sign"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_0"
            android:gravity="center"
            android:text="."
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_dot"
            android:gravity="center"
            android:text="="
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_res"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#453455"
        android:gravity="center|end"
        android:text="256478"
        android:textColor="#FFFFFF"
        android:textSize="50sp"/>
</RelativeLayout>

